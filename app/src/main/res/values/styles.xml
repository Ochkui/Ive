<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    text styles -->
    <style name="GeneralBl">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GeneralWh">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GeneralBl.TextRoboto900">
        <item name="android:fontFamily">@font/roboto_900</item>
    </style>

    <style name="GeneralWh.TextRoboto900">
        <item name="android:fontFamily">@font/roboto_900</item>
    </style>

    <style name="GeneralBl.TextRoboto">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="GeneralBl.TitleOnboard">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="GeneralBl.Title">
        <item name="android:fontFamily">@font/comfortaa</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="GeneralBl.TextRoboto.Normal">
        <item name="android:textSize">11sp</item>
    </style>

<!--    button      -->

    <style name="ButtonBlack">
        <item name="android:background">@drawable/bg_button_black</item>
        <item name="android:textAppearance">@style/GeneralWh.TextRoboto900</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textAppearance">@style/GeneralBl.TextRoboto900</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    edit text   -->

    <style name="EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textAppearance">@style/GeneralBl.TextRoboto</item>
        <item name="android:padding">17dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--    ImageView-->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

</resources>