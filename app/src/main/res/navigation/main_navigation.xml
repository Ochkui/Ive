<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/startFragment">

    <fragment
        tools:layout="@layout/fragment_start"
        android:id="@+id/startFragment"
        android:name="com.example.ive.ui.onboarding.start.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/show_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/show_registration"
            app:destination="@id/registrationFragment" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="age"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_login"
        android:id="@+id/loginFragment"
        android:name="com.example.ive.ui.onboarding.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/show_start"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_registration"
        android:id="@+id/registrationFragment"
        android:name="com.example.ive.ui.onboarding.registration.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/show_start"
            app:destination="@id/startFragment" />
    </fragment>
</navigation>