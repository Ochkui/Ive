<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_navigation"
    app:startDestination="@id/discoverFragment">
    <fragment
        tools:layout="@layout/fragment_home"
        android:id="@+id/discoverFragment"
        android:name="com.example.ive.ui.discover.home.HomeFragment"
        android:label="DiscoverFragment" >
        <action
            android:id="@+id/show_search"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ive.ui.discover.search.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/show_home"
            app:destination="@id/discoverFragment" />
    </fragment>
</navigation>