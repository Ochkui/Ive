<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discover_navigation"
    app:startDestination="@id/discoverFragment">
    <fragment
        tools:layout="@layout/fragment_home"
        android:id="@+id/discoverFragment"
        android:name="com.example.ive.ui.discover.home.HomeFragment"
        android:label="DiscoverFragment" >
    </fragment>

    <fragment
        tools:layout="@layout/fragment_search"
        android:id="@+id/searchFragment"
        android:name="com.example.ive.ui.discover.search.SearchFragment"
        android:label="SearchFragment" >
    </fragment>

    <fragment
        tools:layout="@layout/fragment_user_profile"
        android:id="@+id/userProfileFragment"
        android:name="com.example.ive.ui.discover.profile.UserProfileFragment"
        android:label="ProfileFragment">

    </fragment>
    <fragment
        tools:layout="@layout/fragment_photo"
        android:id="@+id/photoFragment"
        android:name="com.example.ive.ui.discover.photo.PhotoFragment"
        android:label="PhotoFragment" >

        <action
            android:id="@+id/show_profile"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/discoverFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ive.ui.discover.profile.ProfileFragment"
        android:label="ProfileFragment">

        <argument
            android:name="data"
            app:nullable="true"
            app:argType="com.example.ive.component.model.UserProfileViewData" />
    </fragment>

</navigation>